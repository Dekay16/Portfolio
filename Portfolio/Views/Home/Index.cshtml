@using Portfolio.Business.ViewModels
@model List<ProjectsViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Hello, I am Dekan Peterson</h1>
        <p>Software Engineer who builds clean, secure, and efficient .NET Applications.</p>
    </div>
    <hr />
    <div class="text-start">
        <h4>Projects:</h4>
    </div>
    <div class="project-cards">
        @for (int i = 0; i < Model.Count; i += 3)
        {
            <div class="row mb-4">
                @for (int j = i; j < i + 3 && j < Model.Count; j++)
                {
                    <div class="col-4">
                        <div class="card m-3">
                            <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@Model[j].Title</h5>
                                <p class="card-text">@Model[j].Description</p> <br />
                                <p class="text-secondary-emphasis">Technologies: @Model[j].Technologies</p>
                                <a href="@Model[j].GitHubLink" class="btn btn-primary"><i class="fa-brands fa-github"></i> GitHub</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>


