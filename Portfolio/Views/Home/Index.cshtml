@using Portfolio.Business.ViewModels
@model List<ProjectsViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Hello, I am Dekan Peterson</h1>
        <p>Software Engineer who builds clean, secure, and efficient .NET Applications.</p>
    </div>
    <hr />
    <div class="row">
        <div class="text-start d-flex col-6">
            <h4>Projects:</h4>
        </div>
        <div class="justify-content-end d-flex col-6">
            <button type="button" onclick="openAddEditModal(0)" class="btn btn-success open-modal">+ Add</button>
        </div>
    </div>
    <div class="project-cards">
        @for (int i = 0; i < Model.Count; i += 3)
        {
            <div class="row mb-4">
                @for (int j = i; j < i + 3 && j < Model.Count; j++)
                {
                    <div class="col-md-4">
                        <div class="card m-3">
                            @* <img src="@Model[j].FilePath" class="card-img-top" alt="Project card image"> *@
                            <div class="card-body">
                                <h5 class="card-title d-inline-flex">@Model[j].Title</h5>
                                <a onclick="openAddEditModal(@Model[j].ID)" class="float-end d-inline-flex"><i class="fa-solid fa-pen-to-square"></i></a>
                                <p class="card-text">@Model[j].Description</p> <br />
                                <p class="text-secondary-emphasis">Technologies: @Model[j].Technologies</p>
                                <a href="@Model[j].GitHubLink" class="btn btn-primary"><i class="fa-brands fa-github"></i> GitHub</a>
                                
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<div class="modal fade" id="addEditProjectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="projectContent">
            <div class="modal-header">
                <h5 class="modal-title">Add / Edit Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="addEditModalBody">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="addeditprojectform">Save</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/home/index.js"></script>
}


