<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/datatablesjs/datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="sidebar">
        <ul class="nav flex-column px-3">
            <li class="nav-item"><a asp-action="Index" asp-controller="Home" class="nav-link">Home</a></li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Admin
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="VisitsPerDay">Traffic Log</a></li>
                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Error">Error Log</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
            </li>
            <li class="nav-item"><a asp-action="Contact" asp-controller="Home" class="nav-link">Contact/Resume</a></li>
        </ul>
    </div>

    <div id="overlay" onclick="toggleSidebar()"></div>

    <div id="main-content" class="p-4">
        <button class="btn btn-dark mb-3" onclick="toggleSidebar()">☰</button>
        <main role="main" class="container">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/63c47b8b1f.js" crossorigin="anonymous"></script>
    <script src="~/lib/datatablesjs/datatables.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
